{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Check flake8 compliance",
            "type": "shell",
            "command": "tox",
            "args": [
                "-e",
                "flake8"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "label": "Install python project",
            "type": "shell",
            "command": "python",
            "args": [
                "setup.py",
                "install"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}